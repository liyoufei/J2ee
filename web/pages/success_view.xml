<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="Http://localhost:8080/xsl/success.xsl"?>
<view>
    <header>
        <title>a viewer in MVC</title>
    </header>
    <body>
        <form>
            <name>loginForm</name>
            <action>submit.ac</action>
            <method>post</method>
            <textView>
                <name>userName</name>
                <label>Login Name:</label>
                <value>admin</value>
            </textView>
            <textView>
                <name>userPassword</name>
                <label>password</label>
                <value>12345</value>
            </textView>
            <buttonView>
                <name>loginButton</name>
                <label>Login</label>
            </buttonView>
        </form>
    </body>
</view>
